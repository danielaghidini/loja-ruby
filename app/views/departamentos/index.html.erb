        <div class="row">
            <div class="col-sm-12">
                <h3 class="lead">Departamentos</h3>
                    <% if flash[:notice] %>
                        <div class="alert alert-success" role="alert">
                            <%= flash[:notice] %>
                        </div>
                    <% end %>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">

                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th colspan=3></th>
                        </tr>
                    </thead>
                    <tbody>  
                        <% @departamentos.each do |departamento| %>
                            <tr>
                                <td><%= departamento.nome %></td>
                                <td><%= link_to 'Ver Produtos', departamento, class:"btn btn-default" %></td>
                                <td><%= link_to 'Editar', edit_departamento_path(departamento), class:"btn btn-default" %></td>
                                <td><%= button_to "Deletar", departamento, method: :delete, class:"btn btn-default", data: {confirm: "Tem certeza que deseja deletar o departamento #{departamento.nome}?"} %></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
         <div class="row">
            <div class="col-sm-12">
                <%= link_to "Novo Departamento", new_departamento_path, class:"btn btn-success pull-right" %>
            </div>
        </div>


