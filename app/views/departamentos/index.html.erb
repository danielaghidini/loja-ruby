        <div class="row">
            <div class="col-12">
                <h3 class="lead">Departamentos</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
            <p id="notice"><%= notice %></p>
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th colspan=3></th>
                        </tr>
                    </thead>
                    <tbody>  
                        <% @departamentos.each do |departamento| %>
                            <tr>
                                <td><%= departamento.nome %></td>
                                <td><%= link_to 'Mostrar', departamento, class:"btn btn-link" %></td>
                                <td><%= link_to 'Editar', edit_departamento_path(departamento), class:"btn btn-link" %></td>
                                <td><%= button_to "Remover", departamento, method: :delete, class:"btn btn-link", data: {confirm: "Tem certeza que deseja remover o departamento #{departamento.nome}?"} %></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
         <div class="row">
            <div class="col-12">
                <%= link_to "Novo Departamento", new_departamento_path, class:"btn btn-success pull-right" %>
            </div>
        </div>


