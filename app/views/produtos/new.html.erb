       
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
            <% @produto.errors.full_messages.each do |msg| %>
                <div class="alert alert-danger" role="alert">
                    <%= msg %>
                </div>
            <% end %>
            <div class="alert alert-success" role=""alert>
                    <h3 class="alert-heading">Cadastro de Produtos</h3>
                </div>
                <%= form_for @produto do |form| %>
                    
                    <div class="form-group">
                        <%= form.label :nome %>
                        <%= form.text_field :nome, class:"form-control" %>
                    </div>
                     <div class="form-group">
                        <%= form.label :descricao %>
                        <%= form.text_area :descricao, class:"form-control", rows:4 %>
                    </div>
                     <div class="form-group">
                        <%= form.label :preco %>
                        <%= form.number_field :preco, class:"form-control", step: 0.01 %>
                    </div>
                     <div class="form-group">
                        <%= form.label :quantidade %>
                        <%= form.number_field :quantidade, class:"form-control" %>
                    </div>
                    <%= form.submit "Criar", class:"btn btn-success pull-right" %>                
                <% end %>
                
            </div>
        </div>
    </div>